{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "PCA",
    "version": "2023.1.0-next"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": ["$APP","$APP/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "WushuLate@NexusMods-Kiyozz@GitHub",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.wk.pca",
      "longDescription": "Use Papyrus Compiler without Creation Kit App. Internally, PCA uses Official Papyrus Compiler from Bethesda",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Papyrus compiler app (PCA) by WushuLate",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 820,
        "width": 800,
        "resizable": true,
        "title": "PCA 2023.1-NEXT",
        "minWidth": 650,
        "minHeight": 800
      }
    ]
  }
}
